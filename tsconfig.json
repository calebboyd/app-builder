{
  "compilerOptions": {
    "target": "es2018",
    "declaration": true,
    "module": "es2015",
    "skipLibCheck": true,
    "lib": ["es2018"],
    "outDir": "lib/esm",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
